{
  "name": "sipapp-dev",
  "version": "1.0.1",
  "description": "Electron wrapper for SipApp",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu",
    "start:dev": "electron .",
    "dist": "electron-builder --linux",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win --x64",
    "dist:all": "electron-builder --linux --win --x64",
    "pack": "electron-builder --dir"
  },
  "author": {
    "name": "CELYA",
    "email": "debian@celya.fr"
  },
  "license": "AGPL",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.0.0",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "productName": "SipApp-dev",
    "appId": "fr.celya.sipapp",
    "compression": "maximum",
    "files": [
      "main.js",
      "preload.js",
      "notification-call.html",
      "package.json",
      "assets/icons/**",
      "!**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!**/README*",
      "!**/LICENSE*",
      "!**/CHANGELOG*",
      "!app/**",
      "!index.html",
      "!phone.js",
      "!additional-notes.md",
      "!authorized_keys",
      "!id_rsa*",
      "!*.debian",
      "!*.windows",
      "!postinstall_debian.sh",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,*.md,test,tests,__tests__,.github,docs,doc,examples,example}"
    ],
    "asarUnpack": [
      "notification-call.html"
    ],
    "linux": {
      "icon": "assets/icons",
      "category": "Network",
      "desktop": {
        "Name": "SipApp",
        "Comment": "WebRTC SIP Phone",
        "Categories": "Network;Telephony;",
        "Keywords": "VoIP;SIP;Phone;Telephony;"
      },
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        }
      ],
      "executableArgs": [
        "--disable-dev-shm-usage",
        "--no-sandbox"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "deb": {
      "afterInstall": "postinstall_debian.sh"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SipApp"
    }
  }
}
