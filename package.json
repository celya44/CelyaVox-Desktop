{
  "name": "CelyaVox",
  "version": "1.0.9",
  "description": "Electron wrapper for CelyaVox",
  "repository": {
    "type": "git",
    "url": "https://github.com/celya44/CelyaVox-Desktop"
  },
  "main": "main.js",
  "config": {
    "environment": "dev"
  },
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu",
    "start:dev": "cross-env APP_ENV=dev electron . --no-sandbox --disable-gpu",
    "start:prod": "cross-env APP_ENV=prod electron . --no-sandbox --disable-gpu",
    "prebuild": "node scripts/prebuild.js",
    "build:dev": "cross-env APP_ENV=dev npm run prebuild && electron-builder --linux",
    "build:prod": "cross-env APP_ENV=prod npm run prebuild && electron-builder --linux",
    "dist": "electron-builder --linux",
    "dist:linux": "electron-builder --linux",
    "dist:linux:dev": "cross-env APP_ENV=dev npm run prebuild && electron-builder --linux",
    "dist:linux:prod": "cross-env APP_ENV=prod npm run prebuild && electron-builder --linux",
    "dist:win": "electron-builder --win --x64",
    "dist:win:dev": "cross-env APP_ENV=dev npm run prebuild && electron-builder --win --x64",
    "dist:win:prod": "cross-env APP_ENV=prod npm run prebuild && electron-builder --win --x64",
    "dist:mac": "electron-builder --mac",
    "dist:mac:dev": "cross-env APP_ENV=dev npm run prebuild && electron-builder --mac",
    "dist:mac:prod": "cross-env APP_ENV=prod npm run prebuild && electron-builder --mac",
    "dist:all": "electron-builder --linux --win --mac --x64",
    "dist:all:dev": "cross-env APP_ENV=dev npm run prebuild && electron-builder --linux --win --mac --x64",
    "dist:all:prod": "cross-env APP_ENV=prod npm run prebuild && electron-builder --linux --win --mac --x64",
    "pack": "electron-builder --dir"
  },
  "author": {
    "name": "CELYA",
    "email": "debian@celya.fr"
  },
  "license": "AGPL",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "electron": "^38.2.2",
    "electron-builder": "^24.0.0",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "productName": "celyavox-dev",
    "appId": "fr.celya.celyavox.dev",
    "compression": "maximum",
    "files": [
      "main.js",
      "preload.js",
      "notification-call.html",
      "enable-text-selection.css",
      "config.js",
      "package.json",
      "assets/icons/**",
      "!**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!**/README*",
      "!**/LICENSE*",
      "!**/CHANGELOG*",
      "!app/**",
      "!index.html",
      "!phone.js",
      "!additional-notes.md",
      "!authorized_keys",
      "!id_rsa*",
      "!*.debian",
      "!*.windows",
      "!postinstall_debian.sh",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,*.md,test,tests,__tests__,.github,docs,doc,examples,example}"
    ],
    "asarUnpack": [
      "notification-call.html"
    ],
    "linux": {
      "icon": "assets/icons",
      "category": "Network",
      "desktop": {
        "Name": "CelyaVox Dev",
        "Comment": "WebRTC SIP Phone",
        "Categories": "Network;Telephony;",
        "Keywords": "VoIP;SIP;Phone;Telephony;"
      },
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        }
      ],
      "executableArgs": [
        "--disable-dev-shm-usage",
        "--no-sandbox"
      ]
    },
    "win": {
      "icon": "assets/icons",
      "publisherName": "CELYA",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "msi": {
      "artifactName": "${productName}-${version}.${ext}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false
    },
    "mac": {
      "icon": "assets/app.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "deb": {
      "afterInstall": "postinstall_debian.sh",
      "artifactName": "celyavox-dev_${version}_${arch}.${ext}"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "portable": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "rpm": {
      "artifactName": "celyavox-dev-${version}.${arch}.${ext}"
    }
  }
}